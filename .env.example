# This app's name e.g. Wassup
export APP_NAME="Wassup"
# This app's public facing URL e.g. https://app.wassuphq.com
export APP_URL="http://app.wassuphq.com"
# App's hostname e.g. wassupapp.com
export APP_HOSTNAME="app.wassuphq.com"
# Email address used as "from" to send all emails, e.g. support@wassupapp.com
export MAIL_SENDER_EMAIL="support@wassuphq.com"
# A really long secret, can be generated using `mix phx.gen.secret` task
export SECRET_KEY_BASE="XXXXXXXXXXXXXXXXXXXXXXXXX"
# Salt used to secure live view communication, generate using `mix phx.gen.secret 32` task
export LIVE_VIEW_SIGNING_SALT="XXXXXXXXXXXXXXXXXXXXXXXXX"
# Database URL in the form: "postgres://USER:PASS@HOST/database"
export DATABASE_URL="postgres://postgres:postgres@localhost/wassup_app_prod"

# Variables to allow sign-in using Google.
# Please Follow
# https://github.com/wassuphq/wassup/wiki/Creating-an-OAuth-2.0-client-to-enable-sign-in-using-Google
# for the step-by-step guide to obtain the client ID and client secret values.
export GOOGLE_CLIENT_ID="XXXXXXX"
export GOOGLE_CLIENT_SECRET="XXXXXXX"
export GOOGLE_REDIRECT_URI="http://app.wassuphq.com/auth/google/callback"

# If set to "true", user registration feature would be disabled. Default is "false".
export REGISTRATION_DISABLED="false"

# Mail delivery service's SMTP configuration
export SMTP_PROVIDER_DOMAIN="XXXXXX" # e.g. smtp.mandrill.com
export SMTP_USERNAME="XXXXXX"
export SMTP_PASSWORD="XXXXXX"

# Google Analytics tracking ID (OPTIONAL)
export GOOGLE_ANALYTICS_TRACKING_ID="UA-XXXXXXX-X"
